<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recording_tile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EDEDED"
    android:padding="16dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/car_tile_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Автомобиль:"
        android:textColor="#4C4C4C"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/car_tile_work_done_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Проделанная работа:"
        android:textColor="#4C4C4C"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/car_tile_license_plate" />

    <TextView
        android:id="@+id/car_tile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Ford Mondeo"
        android:textColor="#4C4C4C"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/car_tile_header" />

    <TextView
        android:id="@+id/car_tile_work_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textColor="#5C5C5C"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/car_tile_work_done_header" />

    <TextView
        android:id="@+id/car_tile_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2013"
        android:textColor="#5C5C5C"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/car_tile_name" />

    <TextView
        android:id="@+id/car_tile_license_plate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Е 666 КХ 97"
        android:textColor="#5C5C5C"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/car_tile_year" />

</androidx.constraintlayout.widget.ConstraintLayout>